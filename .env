# -----------------------------
# Mongo root (admin user)
# -----------------------------
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=rootpass

# -----------------------------
# App database
# -----------------------------
MONGO_DB=lets_play

# -----------------------------
# App user (used by Spring)
# -----------------------------
MONGO_APP_USERNAME=letsplay
MONGO_APP_PASSWORD=letsplaypass

# -----------------------------
# mongo-express basic auth (login UI)
# -----------------------------
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=adminpass

# -----------------------------
# Spring Boot connection URI
# -----------------------------
SPRING_DATA_MONGODB_URI=mongodb://letsplay:letsplaypass@127.0.0.1:27017/lets_play?authSource=lets_play
